<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.chunbae.narchive.presentation.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fg_group_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:includeFontPadding="false"
                android:text="@string/toolbar_group"
                android:textColor="@color/text_black"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/maragin_20"
                android:src="@drawable/ic_common_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/fg_group_tv_group_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ì±…"
            android:textSize="22sp"
            android:textColor="@color/text_black"
            android:fontFamily="@font/pretendard_semibold"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/maragin_20"
            android:layout_marginStart="@dimen/margin_12"
            app:layout_constraintTop_toBottomOf="@id/fg_group_layout_toolbar"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_common_chervon_down"
            android:layout_marginStart="@dimen/margin_7"
            app:layout_constraintTop_toTopOf="@id/fg_group_tv_group_type"
            app:layout_constraintBottom_toBottomOf="@id/fg_group_tv_group_type"
            app:layout_constraintStart_toEndOf="@id/fg_group_tv_group_type" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fg_group_rv_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_10"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_3"
            app:layout_constraintTop_toBottomOf="@id/fg_group_tv_group_type"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_group_content_form"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>